<?xml version="1.0"?>
<extension key="de.systopia.rocketchatapi" type="module">
  <file>rocketchatapi</file>
  <name>Rocketchat API</name>
  <description>Api to communicate with Rocketchat via REST</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Philipp Batroff</author>
    <email>batroff@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.rocketchatapi</url>
    <url desc="Documentation">https://github.com/systopia/de.systopia.rocketchatapi</url>
    <url desc="Support">https://github.com/systopia/de.systopia.rocketchatapi</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2020-11-20</releaseDate>
  <version>1.0</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>5.27</ver>
  </compatibility>
  <comments>Build upon HTTPFUL Library (http://phphttpclient.com/). Install via composer in resources/lib/</comments>
  <civix>
    <namespace>CRM/Rocketchatapi</namespace>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
</extension>
